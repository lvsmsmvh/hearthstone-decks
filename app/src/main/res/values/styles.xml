<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/palette_100</item>
        <item name="colorPrimaryDark">@color/palette_bg</item>
        <item name="colorAccent">@color/palette_100</item>
        <item name="android:colorPrimary">@color/palette_100</item>
        <item name="android:colorEdgeEffect">@color/palette_100</item>

        <item name="colorSecondary">@color/palette_text_2</item>
        <item name="android:colorBackground">@color/palette_900</item>
        <item name="android:colorControlNormal">@color/palette_text_2</item>

        <!-- Primary brand color. -->
        <item name="colorControlNormal">@color/palette_text_1</item>
        <item name="colorControlActivated">@color/palette_text_1</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_yellow</item>

        <item name="android:textColor">@color/palette_text_1</item>
        <item name="android:textColorPrimary">@color/palette_text_1</item>
        <item name="android:textColorSecondary">@color/palette_text_3</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <style name="RecyclerViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/palette_00</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>

        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/background_yellow</item>
    </style>


    <!--    Image Preview Dialog-->
    <style name="ImagePreviewerTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/ImagePreviewerAnimation</item>
    </style>

    <style name="ImagePreviewerAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="LightTextWithShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/palette_text_1</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="NavDrawer" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@color/palette_text_3</item>
        <item name="android:listDivider">@color/palette_text_3</item>
        <item name="android:background">@color/palette_item_on_bg</item>
    </style>
</resources>