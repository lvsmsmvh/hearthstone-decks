<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/bck_for_deck_holder</item>
        <item name="colorPrimaryDark">@color/bck_for_deck_holder</item>
        <item name="colorAccent">@color/bck_for_app</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/bck_for_deck_holder</item>
    </style>
</resources>