<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/palette_100</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="colorAccent">@color/palette_100</item>
        <item name="android:colorPrimary">@color/palette_100</item>
        <item name="android:colorEdgeEffect">@color/palette_100</item>

        <item name="colorSecondary">@color/text_2</item>
        <item name="android:colorBackground">@color/palette_900</item>
        <item name="android:colorControlNormal">@color/text_2</item>

        <item name="colorControlNormal">@color/text_1</item>
        <item name="colorControlActivated">@color/text_1</item>
        <item name="colorPrimaryVariant">@color/text_1</item>
        <item name="colorOnPrimary">@color/text_1</item>

        <item name="android:textColor">@color/text_1</item>
        <item name="android:textColorPrimary">@color/text_1</item>
        <item name="android:textColorSecondary">@color/text_3</item>

        <item name="android:statusBarColor">@color/palette_00</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RecyclerViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/palette_00</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/palette_1000</item>
    </style>

    <style name="DialogHeroFilterStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ImagePreviewerTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/ImagePreviewerAnimation</item>
    </style>

    <style name="ImagePreviewerAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="TextWithShadow">
        <item name="android:shadowColor">@color/black_transparent_1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="LightTextWithShadow" parent="TextWithShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="NavDrawer" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@color/text_3</item>
        <item name="android:listDivider">@color/text_3</item>
        <item name="android:background">@color/on_bg</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/bg</item>
        <item name="android:textColorSecondary">@color/text_1</item>
        <item name="colorControlHighlight">@color/ripple_light</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/on_bg</item>
        <item name="colorOnSurface">@color/text_1</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button</item>
    </style>

    <style name="Alert.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple_light</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RateAppDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>