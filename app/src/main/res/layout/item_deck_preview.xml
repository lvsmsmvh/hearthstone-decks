<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="7dp"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/on_bg"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_solid"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/deck_class_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/main_image"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/deck_class_img"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deck_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_1"
                android:textSize="15sp"
                tools:text="Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deck_dust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_2"
                    android:textSize="14sp"
                    tools:text="2340" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="3dp"
                    android:contentDescription="@string/dust_icon"
                    android:src="@drawable/dust" />

                <View
                    android:id="@+id/about_app_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_3"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="4dp" />

                <ImageView
                    android:id="@+id/deck_format_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_wild"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/dust_icon"
                android:src="@drawable/ic_fi_eye"
                app:tint="@color/text_3" />

            <TextView
                android:id="@+id/deck_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/text_3"
                android:textSize="13sp"
                tools:text="2340" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/dust_icon"
                android:src="@drawable/ic_baseline_calendar_month_24"
                app:tint="@color/text_3" />

            <TextView
                android:id="@+id/deck_time_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/text_3"
                android:textSize="13sp"
                tools:text="16 min ago" />
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>