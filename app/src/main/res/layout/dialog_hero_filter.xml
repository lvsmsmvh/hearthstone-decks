<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingBottom="20dp"
    android:paddingTop="5dp"
    android:background="@drawable/bck_for_deck_holder"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_prompt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:layout_marginEnd="10dp"
            android:inputType="text"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:hint="@string/enter_deck_name_here"
            android:textColorHint="@color/text_3"
            android:textSize="14sp"
            android:textColor="@color/text_1"
            android:maxLines="1" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_select_all"
            android:layout_width="wrap_content"
            android:gravity="end|center_vertical"
            android:buttonTint="@color/text_2"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_select_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:textColor="@color/text_2"
            android:text="@string/select_all" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="10dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_hero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent_full"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/text_2"
            app:backgroundTint="@null" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_transparent_ripple"
            android:text="@android:string/ok"
            android:textAllCaps="false"
            android:textColor="@color/text_1"
            android:textStyle="bold"
            android:textSize="12sp"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>