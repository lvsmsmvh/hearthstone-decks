<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:id="@+id/item_hero_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="2dp"
        android:background="@drawable/bg_corners_2"
        android:minHeight="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_hero_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/item_hero_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="3"
            android:maxLines="3"
            android:textColor="@color/text_2"
            android:textColorLink="@color/text_1"
            android:textSize="12sp"
            tools:text="Title" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/item_hero_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:buttonTint="@color/text_2" />

    </LinearLayout>

    <View
        android:id="@+id/about_app_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:background="@color/bg" />
</LinearLayout>