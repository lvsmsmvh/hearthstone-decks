<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listNewsFragment">

    <fragment
        android:id="@+id/listNewsFragment"
        android:name="com.cyberquick.hearthstonedecks.ui.news.ListNewsFragment"
        android:label="List"
        tools:layout="@layout/list_news_fragment">
        <action
            android:id="@+id/action_listNewsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.cyberquick.hearthstonedecks.ui.details.DetailsFragment"
        android:label="Deck"
        tools:layout="@layout/details_fragment">
        <action
            android:id="@+id/action_detailsFragment_to_cardFragment"
            app:destination="@id/cardFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
        <argument
            android:name="newsJson"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.cyberquick.hearthstonedecks.ui.card.CardFragment"
        android:label="Card"
        tools:layout="@layout/card_fragment">
        <argument
            android:name="linkOnCard"
            app:argType="string" />
    </fragment>
</navigation>